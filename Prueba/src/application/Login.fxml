<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<Pane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ControladorLogin">
   <children>
      <VBox prefHeight="300.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" prefHeight="75.0" prefWidth="404.0" text="Login IES-Azarquiel">
               <font>
                  <Font name="Arial Italic" size="18.0" />
               </font>
            </Label>
            <HBox maxHeight="73.0" prefHeight="30.0" prefWidth="400.0">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="34.0" prefWidth="167.0" text="Usuario" textAlignment="RIGHT" />
                  <TextField fx:id="usuario" prefHeight="30.0" prefWidth="149.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="400.0">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="34.0" prefWidth="167.0" text="Contraseña" textAlignment="RIGHT" />
                  <PasswordField fx:id="contraseña" prefHeight="30.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Button fx:id="enviar" mnemonicParsing="false" onAction="#enviar" prefHeight="12.0" prefWidth="100.0" text="Enviar">
                     <HBox.margin>
                        <Insets left="66.0" right="66.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancelar" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Cancelar">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="estado" alignment="CENTER" prefHeight="30.0" prefWidth="200.0" text="Introduzca su usuario y contraseña">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</Pane>
